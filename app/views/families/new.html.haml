.block
	.secondary-navigation
		%ul.wat-cf
			%li.first= link_list_families
			%li.active= link_new_family
	.content
		%h2.title= i18n_title_str("new_family")
		.inner
			= semantic_form_for @family, :html => {:class => "form"} do |f|
				= render :partial => "form", :locals => {:f => f}
				.group.navform.wat-cf
					= button_submit("create_family")
					%span.text_button_padding= i18n_word_str("or")
					= link_back(families_path)
- content_for :sidebar, render(:partial => 'sidebar')
