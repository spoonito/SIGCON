.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", pfs_consultations_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_pfs_consultation_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_pfs_consultation_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      PfsConsultation
    .inner
      = form_for @pfs_consultation, :url => pfs_consultation_path(@pfs_consultation), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
